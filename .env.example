# Database Configuration
# Choose one based on your database:

# MySQL/MariaDB
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# SQL Server (with pyodbc)
# DATABASE_URL=mssql+pyodbc://username:password@localhost:1433/database_name?driver=ODBC+Driver+17+for+SQL+Server

# SQL Server (with pymssql)
# DATABASE_URL=mssql+pymssql://username:password@localhost:1433/database_name

APP_URL=your-app-url-here

# Security
ADMIN_TOKEN=your-secure-admin-token-here
SECRET_KEY=your-secret-key-for-sessions-here
JWT_SECRET=your-jwt-secret-here

# Google Forms API (optional)
GOOGLE_CREDENTIALS_PATH=google_credentials.json

# Application Settings
DEBUG=false
APP_NAME=URL Redirect & A/B Testing

# Session Configuration
SESSION_COOKIE_NAME=admin_session
SESSION_MAX_AGE=86400

# A/B Testing
CLICK_ID_MAX_AGE_SECONDS=60
